{
  "expo": {
    "name": "Tình Yêu Chu Chubé",
    "slug": "tinhyeuchuchube",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "tinhyeuchuchube",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tinhyeuchuchube.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Used for selfie verification and check-in photos",
        "NSPhotoLibraryUsageDescription": "Used to upload photos for your Vibe Card",
        "NSLocationWhenInUseUsageDescription": "Used for mission check-in verification"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.tinhyeuchuchube.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to use camera for selfie verification"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos for Vibe Card creation"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for mission check-in"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
